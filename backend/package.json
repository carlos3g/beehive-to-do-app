  "author": "carlos3g",
  "main": "src/index.js",
  "scripts": {
    "build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
    "check": "tsc -noEmit",
    "db:drop": "npm run typeorm migration:revert -- -d ./src/config/typeorm.ts",
    "db:migrate": "npm run typeorm migration:run -- -d ./src/config/typeorm.ts",
    "db:seed": "ts-node -r tsconfig-paths/register ./seeds/index.ts",
    "dev": "nodemon -r tsconfig-paths/register src/index.ts",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "prepare": "husky",
    "start": "node dist/index.js",
    "style": "npm run format && npm run lint && npm run check",
    "test": "jest",
    "test:e2e": "jest --runInBand --config ./test/jest-e2e.json",
    "test:watch": "jest --watch",
    "typeorm": "ts-node -r dotenv/config -r tsconfig-paths/register ./node_modules/typeorm/cli.js"
  },
  "dependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@faker-js/faker": "^9.0.3",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-jwt": "^8.4.1",
    "helmet": "^8.0.0",
    "husky": "^9.1.6",
    "inversify": "^6.0.2",
    "jsonwebtoken": "^9.0.2",
    "lint-staged": "^15.2.10",
    "luxon": "^3.5.0",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.15",
    "pg": "^8.13.0",
    "pino-http": "^10.3.0",
    "reflect-metadata": "^0.2.2",
    "tsconfig-paths": "^4.2.0",
    "type-fest": "^4.26.1",
    "typeorm": "^0.3.20",
    "uuid": "^10.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/luxon": "^3.4.2",
    "@types/node": "^22.7.5",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.16",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "concurrently": "^9.0.1",
    "eslint": "^8.42.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^28.8.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "prettier": "^3.0.0",
    "prettier-plugin-packagejson": "^2.5.3",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.1.3"
  }
}
